{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["@caido/sdk-backend"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "disableSourceOfProjectReferenceRedirect": true,
    "composite": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*.ts"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
